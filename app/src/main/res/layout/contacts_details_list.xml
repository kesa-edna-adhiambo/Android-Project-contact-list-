<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="91dp"
            android:layout_height="164dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/rvLink"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/user" />

        <TextView
            android:id="@+id/rvAuthor"
            android:layout_width="276dp"
            android:layout_height="33dp"
            android:layout_marginTop="12dp"
            android:text="H.R Ole Kulet"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView" />

        <TextView
            android:id="@+id/rvTitle"
            android:layout_width="277dp"
            android:layout_height="33dp"
            android:layout_marginTop="8dp"
            android:text="Blossoms Of The Savannah"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/rvAuthor" />

        <TextView
            android:id="@+id/rvPublishedDate"
            android:layout_width="279dp"
            android:layout_height="35dp"
            android:layout_marginTop="4dp"
            android:text="8th-April-2002"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/rvTitle" />

        <TextView
            android:id="@+id/rvLink"
            android:layout_width="281dp"
            android:layout_height="35dp"
            android:layout_marginTop="4dp"
            android:text="https/com.gmail.get"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.48"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/rvPublishedDate" />

        <ImageView
            android:id="@+id/rvArticlePhoto"
            android:layout_width="253dp"
            android:layout_height="99dp"
            android:layout_marginTop="56dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:srcCompat="@drawable/article" />

        <TextView
            android:id="@+id/rvArticlePreview"
            android:layout_width="368dp"
            android:layout_height="88dp"
            android:layout_marginTop="164dp"
            android:text="Blossoms of the savannah is a novel which focuses on themes such  as early marriages, Traditional norms, Plight of women and Wealth. The main characters are Oloisudori, Mama Milanoi, Taiyo and Resian."
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/rvArticlePhoto"
            app:layout_constraintTop_toBottomOf="@+id/rvLink" />

        <TextView
            android:id="@+id/rvPreview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preview"
            android:textColor="#9C27B0"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/rvArticlePreview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.457"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rvLink"
            app:layout_constraintVertical_bias="0.121" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>